# Contributor:
# Maintainer:
pkgname=elementary-stylesheet
pkgver=8.1.0
pkgrel=0
pkgdesc="The GTK Stylesheet for elementary OS"
url="https://github.com/elementary/stylesheet"
arch="all"
license="GPL-3.0"
depends=""
makedepends="
	gettext
	meson
	sassc
	"
checkdepends=""
install=""
source="$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/$pkgver.tar.gz"
options="!check"

builddir="$srcdir/stylesheet-$pkgver"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
8b004cef499b3e0ca90b7165606e54c5fdf7b42c68cb7c1619838dea9a4dbd0ac7b0bc0f60121b6894d590bd4ef6f45821880c266a662b4951ec7f1c3900c9c6  elementary-stylesheet-8.1.0.tar.gz
"
